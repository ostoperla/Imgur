<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_menu_white_24"
        android:background="@drawable/gallery_toolbar_gradient"
        app:title="@string/gallery_title" />

    <com.trelp.imgur.ui.base.view.compound.PaginalRenderStateView
        android:id="@+id/paging_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>